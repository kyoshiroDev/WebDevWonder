{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="container card border-dark col-5 mt-5">
		<form class="card-body " method="post">

			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					You are logged in as
					{{ app.user.userIdentifier }},
					<a href="{{ path('app_logout') }}">Logout</a>
				</div>
			{% endif %}

			<h1 class="h3 mb-3 font-weight-normal text-center">Connexion</h1>
			<label for="inputEmail">Email</label>
			<input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control mt-2 border-dark" autocomplete="email" required autofocus>
			<label class="mt-3" for="inputPassword">Mots de passe</label>
			<div class="input-group">
				<label for="user_password"></label><input type="password" name="_password" id="user_password" class="form-control border-dark" autocomplete="current-password" required>
				<span class="input-group-text border-dark" role="button" onclick="togglePassword()">
					<i class="bi bi-eye-slash eyeslash"></i>
					<i class="bi bi-eye eye d-none"></i>
				</span>
			</div>
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<div class="d-flex justify-content-between align-items-center mt-3">
				<button class="btn btn-lg btn-primary" type="submit">
					Connexion
				</button>
				<a href="{{ path('app_user_new') }}">Vous n'avez pas encore de compte ?</a>
			</div>
		</form>
	</div>
{% endblock %}

